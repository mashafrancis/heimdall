    "@t3-oss/env-core": "^0.10.1",
    "@vercel/kv": "^1.0.1",
    "detect-browser": "^5.3.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "hono": "3.11.2",
    "isbot": "^5.1.6",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.3",
    "maxmind": "^4.3.19",
    "ora": "^8.0.1",
    "request-ip": "^3.3.0",
    "tar": "^7.1.0",
    "tsx": "^4.9.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/request-ip": "^0.0.41",
    "@types/tar": "^6.1.13"
