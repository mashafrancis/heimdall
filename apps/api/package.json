{
  "name": "@heimdall-logs/server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "dotenv -e ../../.env -- bun run --hot src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "setup:geo": "tsx setup/geo.ts",
    "setup:clickhouse": "dotenv tsx setup/clickhouse-db.ts",
    "serve": "pm2 start dist/index.js --name heimdall",
    "with-env": "dotenv -e ../../.env --"
  },
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index/ts",
  "type": "module",
  "dependencies": {
    "@clickhouse/client": "^1.4.0",
    "@heimdall-logs/clickhouse": "workspace:*",
    "@heimdall-logs/db": "workspace:*",
    "@hono/node-server": "1.12.0",
    "@t3-oss/env-core": "^0.11.0",
    "@vercel/kv": "^2.0.0",
    "detect-browser": "^5.3.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.1",
    "hono": "4.5.1",
    "isbot": "^5.1.13",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.4",
    "maxmind": "^4.3.20",
    "ora": "^8.0.1",
    "request-ip": "^3.3.0",
    "tar": "^7.4.3",
    "tsx": "^4.16.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@heimdall-logs/tsconfig": "workspace:*",
    "@heimdall-logs/types": "workspace:*",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/request-ip": "^0.0.41",
    "@types/tar": "^6.1.13"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./types": {
      "import": "./src/type.ts",
      "types": "./src/type.ts"
    }
  }
}
