{
	"name": "@heimdall-logs/root",
	"packageManager": "pnpm@8.6.10",
	"private": true,
	"author": {
		"name": "Francis Masha",
		"email": "francismasha96@gmail.com"
	},
	"scripts": {
		"build": "turbo --filter \"./packages/*\" build",
		"build:tracker": "turbo --filter tracker",
		"build:api": "turbo --filter api build",
		"build:web": "turbo --filter web build",
		"dev:tracker": "turbo --filter \"./packages/*\" dev",
		"dev": "turbo run dev --concurrency 12",
		"lint": "turbo run lint -- --fix",
		"format:write": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
		"format": "prettier \"**/*.{css,js,json,jsx,ts,tsx}\"",
		"clean": "turbo run clean && rm -rf node_modules",
		"ui:add": "pnpm --filter web ui:add",
		"typecheck": "turbo typecheck",
		"deploy:api": "turbo --filter api deploy",
		"migrate": "turbo --filter db migrate",
		"migrate:clickhouse": "turbo --filter clickhouse migrate",
		"studio": "pnpm --filter db studio",
		"release": "changeset version && changeset publish",
		"publish:packages": "pnpm run build && pnpm run release"
	},
	"pnpm": {
		"overrides": {
			"@opentelemetry/api": "1.4.1",
			"@opentelemetry/core": "1.13.0",
			"@opentelemetry/exporter-trace-otlp-grpc": "0.39.1",
			"@opentelemetry/resources": "1.13.0",
			"@opentelemetry/sdk-trace-base": "1.13.0",
			"@opentelemetry/sdk-trace-node": "1.13.0",
			"@opentelemetry/semantic-conventions": "1.13.0",
			"@opentelemetry/auto-instrumentations-node": "0.35.0",
			"@opentelemetry/auto-instrumentations-web": "0.31.0",
			"@opentelemetry/context-zone": "1.8.0",
			"@opentelemetry/exporter-metrics-otlp-grpc": "0.34.0",
			"@opentelemetry/exporter-trace-otlp-http": "0.34.0",
			"@opentelemetry/instrumentation": "0.34.0",
			"@opentelemetry/resource-detector-alibaba-cloud": "0.27.3",
			"@opentelemetry/resource-detector-aws": "1.2.1",
			"@opentelemetry/resource-detector-container": "0.2.1",
			"@opentelemetry/resource-detector-gcp": "0.27.4",
			"@opentelemetry/sdk-metrics": "1.8.0",
			"@opentelemetry/sdk-node": "0.34.0",
			"@opentelemetry/sdk-trace-web": "1.8.0"
		}
	},
	"dependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@heimdall-logs/tsconfig": "0.0.1",
		"@manypkg/cli": "^0.21.0",
		"@prisma/client": "^5.3.0",
		"@trivago/prettier-plugin-sort-imports": "^4.2.0",
		"@types/node": "^20.6.0",
		"@types/prettier": "^3.0.0",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.49.0",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"pretty-quick": "^3.1.3",
		"tailwindcss": "^3.3.3",
		"tsup": "^7.2.0",
		"tsx": "^3.12.10",
		"turbo": "^1.10.13",
		"typescript": "^5.2.2",
		"vitest": "^0.34.4"
	}
}
