{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".output/**"
      ],
      "env": ["*"]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "start": {
      "cache": false
    },
    "format": {
      "outputMode": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "clean": {
      "cache": false
    },
    "db:setup": {
      "cache": false
    },
    "deploy": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "RESEND_EMAIL_SECRET",
    "CLICKHOUSE_HOST",
    "CLICKHOUSE_PASSWORD",
    "CLICKHOUSE_USERNAME",
    "CLICKHOUSE_DB"
  ]
}
