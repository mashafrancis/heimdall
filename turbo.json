{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["*"],
      "inputs": ["$TURBO_DEFAULT$", ".env.local", ".env.production", ".env"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".output/**"
      ]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env.local", ".env"]
    },
    "start": {
      "cache": false
    },
    "format": {},
    "format:fix": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "clean": {
      "cache": false
    },
    "db:setup": {
      "cache": false
    },
    "deploy": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "RESEND_EMAIL_SECRET",
    "CLICKHOUSE_HOST",
    "CLICKHOUSE_PASSWORD",
    "CLICKHOUSE_USERNAME",
    "CLICKHOUSE_DB"
  ],
  "globalPassThroughEnv": ["NODE_ENV", "CI", "npm_lifecycle_event"]
}
